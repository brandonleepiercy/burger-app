<div class="row">
    <div class = "col-md-6">
        <h2>Soon To Be Devoured Burgers!</h2>
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{> burger devoured=true}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
        <div class = "col-md-6">
        <h2>100% Devoured Burgers!</h2>
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burger devoured=false}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    </div>
</div>